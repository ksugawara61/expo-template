{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "gql.tada/ts-plugin",
        "schema": "./src/libs/graphql/schema.graphql",
        "tadaOutputLocation": "./src/libs/graphql/graphql-env.d.ts"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
  ],
  "exclude": [
    "graphql",
  ]
}
