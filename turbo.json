{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"]
    },
    "test": {
      "cache": false
    },
    "test:changed": {
      "cache": false
    },
    "typecheck": {
      "cache": false
    },
    "lint": {
      "cache": false
    },
    "fmt": {
      "cache": false
    },
    "start": {
      "cache": false,
      "persistent": true
    }
  }
}
