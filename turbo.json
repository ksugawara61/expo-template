{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".pylon/**", "src/generated/prisma/**"],
      "cache": true
    },
    "test": {
      "dependsOn": ["graphql#build"],
      "cache": false
    },
    "test:changed": {
      "dependsOn": ["graphql#build"],
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["graphql#build"],
      "cache": false
    },
    "lint": {
      "cache": false
    },
    "fmt": {
      "cache": false
    },
    "start": {
      "dependsOn": ["graphql#build"],
      "cache": false,
      "persistent": true
    },
    "codegen": {
      "dependsOn": ["graphql#build"],
      "cache": false
    },
    "web": {
      "with": ["graphql#start"],
      "dependsOn": ["graphql#build"],
      "cache": false,
      "persistent": true
    }
  }
}
