{
  "name": "graphql",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "description": "Generated with `npm create pylon`",
  "scripts": {
    "dev": "pnpm db:generate && pylon dev -c \"node --enable-source-maps .pylon/index.js\" --client --client-port 3000 --client-path src/generated/gqty/index.ts",
    "dev:db:start": "supabase start",
    "dev:db:stop": "supabase stop",
    "build": "pnpm db:generate && pylon build",
    "test": "vitest",
    "test:db:up": "docker-compose -f docker-compose.test.yml up -d",
    "test:db:down": "docker-compose -f docker-compose.test.yml down",
    "test:db:migrate": "DATABASE_URL=\"postgresql://test_user:test_password@localhost:5433/test_db?schema=public\" prisma migrate dev",
    "test:with:db": "pnpm test:db:up && sleep 5 && pnpm test:db:migrate && pnpm test && pnpm test:db:down",
    "db:reset": "prisma migrate reset --force",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "lint:biome": "biome ci . ",
    "lint": "pnpm lint:biome",
    "fmt:biome": "biome format . --write",
    "fmt": "pnpm fmt:biome",
    "generate:openapi": "openapi-typescript openapi/qiita.yaml -o src/generated/openapi/schema.d.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@getcronit/pylon": "^2.0.0",
    "@hono/node-server": "^1.18.2",
    "@prisma/adapter-pg": "^6.14.0",
    "@prisma/client": "^6.14.0",
    "openapi-fetch": "^0.14.0",
    "prisma": "^6.13.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@getcronit/pylon-dev": "^1.0.0",
    "@vitest/ui": "^3.2.4",
    "msw": "^2.3.1",
    "openapi-msw": "^1.2.0",
    "openapi-typescript": "^7.8.0",
    "supabase": "^2.34.3",
    "typescript": "5.8.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@9.15.9+sha256.cf86a7ad764406395d4286a6d09d730711720acc6d93e9dce9ac7ac4dc4a28a7"
}
