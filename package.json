{
  "scripts": {
    "clean": "pnpx npkill -D -x",
    "postinstall": "lefthook install",
    "codegen": "turbo codegen --force",
    "codegen:check": "pnpm codegen && git add mobile/src && if git diff --cached --quiet mobile/src; then echo 'Schema files are in sync.'; git reset mobile/src/libs/graphql/schema.graphql; else echo 'Schema files are out of sync. Please commit the changes after running pnpm schema:sync.'; git reset mobile/src; exit 1; fi",
    "lint": "biome ci . && turbo lint",
    "lint:text": "textlint \"**/*.md\"",
    "fmt": "biome check . --write && turbo fmt",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:changed": "turbo test:changed",
    "start": "turbo start",
    "build": "turbo build"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@textlint-ja/textlint-rule-preset-ai-writing": "^1.6.0",
    "lefthook": "^1.13.0",
    "textlint": "^15.2.2",
    "textlint-rule-preset-ja-technical-writing": "^12.0.2",
    "turbo": "^2.5.8"
  },
  "packageManager": "pnpm@10.17.0+sha256.bd9ec5417641391e0acb3912b2912bd5b0385407a82da94744a7407b567fdb4f"
}
